@page
@model DinoRazor.Pages.DinoList.EditModel
@{
    ViewData["Title"] = "Edit";
}
<br />
<h2 class="text-info">Edit Dinosaur</h2>
<br />

<div class="border container" style="padding:20px;">
    <form method="post">
        <input type="hidden" asp-for="Dino.Id"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Dino.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Dino.Name" class="form-control" />
            </div>
            <span asp-validation-for="Dino.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Dino.Period"></label>
            </div>
            <div class="col-8">
                <input asp-for="Dino.Period" class="form-control" />
            </div>
            <span asp-validation-for="Dino.Period" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Dino.Diet"></label>
            </div>
            <div class="col-8">
                <input asp-for="Dino.Diet" class="form-control" />
            </div>
            <span asp-validation-for="Dino.Diet" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-4 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
                <!--<button asp-route-id= "@@Model.Dino.Id"  class="btn btn-primary form-control">Update</button>-->
            </div>
            <div class="col-4">
                <a asp-page="Index" class="btn btn-success form-control"> Back to List </a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
